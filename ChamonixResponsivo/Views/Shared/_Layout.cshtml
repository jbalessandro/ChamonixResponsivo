<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="background-image">
    <div class="navbar navbar-inverse navbar-fixed-top menu row-menu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="/Home/Index" class="navbar-brand">
                    <img src="~/images/logo.png" width="140" height="140" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menu">
                    <li>@Html.ActionLink("INÍCIO", "Index", "Home")</li>
                    <li>@Html.ActionLink("RESTAURANTE", "Restaurante", "Home")</li>
                    <li>@Html.ActionLink("CARDÁPIO", "Cardapio", "Home")</li>
                    <li>@Html.ActionLink("LOCALIZAÇÃO","Localizacao", "Home")</li>
                    <li>@Html.ActionLink("CONTATO", "Contato","Home")</li>
                    <li>@Html.ActionLink("HISTÓRIA", "Historia", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            Imagens ilustrativas
        </footer>
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

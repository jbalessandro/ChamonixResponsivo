@using ChamonixResponsivo.Areas.Restaurante.Common.Hepers;
@model Chamonix.Domain.Models.Admin.Conta

@{
    ViewBag.Title = "Agendamento";

    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info top20">
            @ViewBag.Message
        </div>
    }
}

<h2>Novo Agendamento</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PedidoEm)
        @Html.HiddenFor(model => model.UsuarioId)
        @Html.HiddenFor(model => model.Ativo)

        <div class="form-group">
            @Html.LabelFor(model => model.FornecedorId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                @Html.SelectFornecedor(Model.FornecedorId)
                @Html.ValidationMessageFor(model => model.FornecedorId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContaCategoriaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.SelectContaCategoria(Model.ContaCategoriaId)
                @Html.ValidationMessageFor(model => model.ContaCategoriaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Incluir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
